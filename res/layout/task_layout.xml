<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/subjectName" android:textSize="40dp"
                android:textColor="@android:color/white" android:paddingTop="10dp"
                android:paddingBottom="10dp" android:paddingLeft="10dp" android:singleLine="true"
                android:layout_weight="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/subtasksCount"
                android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>